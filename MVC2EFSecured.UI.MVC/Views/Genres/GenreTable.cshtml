@model IEnumerable<MVC2EFSecured.DATA.EF.Genre>

@{
    ViewBag.Title = "Genres - Table View";
}

<h2>@ViewBag.Title</h2>

<div class="row">
    <div class="col-md-6">
        @Html.ActionLink("Add new Genre", "Create", "Genres", null, new { @class = "btn btn-primary" })
    </div>
    <div class="col-md-6 text-right">
        @Html.ActionLink("View as Tiles", "Index", "Genres", null, new { @class = "btn btn-secondary" })
    </div>
</div>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.GenreName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.GenreName)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.GenreID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.GenreID })
            </td>
        </tr>
    }

</table>

